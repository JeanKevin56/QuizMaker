{
  "name": "QuizMaker",
  "version": "1.0.0",
  "description": "A web-based quiz platform with AI-powered features",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:prod": "NODE_ENV=production vite build && node scripts/build-optimize.js",
    "build:deploy": "NODE_ENV=production vite build && node scripts/build-optimize.js",
    "build:analyze": "vite build --mode analyze",
    "preview": "vite preview",
    "test": "vitest --run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .js,.ts,.jsx,.tsx",
    "lint:fix": "eslint src --ext .js,.ts,.jsx,.tsx --fix",
    "format": "prettier --write src/**/*.{js,ts,jsx,tsx,css,html}",
    "clean": "if exist dist rmdir /s /q dist",
    "optimize": "node scripts/build-optimize.js",
    "prebuild": "npm run clean && npm run test",
    "prebuild:prod": "npm run clean && npm run lint && npm run test",
    "deploy": "npm run build:prod && gh-pages -d dist",
    "deploy:github": "npm run build:prod && gh-pages -d dist -b gh-pages",
    "predeploy": "npm run build:prod"
  },
  "dependencies": {
    "pdfjs-dist": "^4.0.379"
  },
  "devDependencies": {
    "@vitejs/plugin-legacy": "^5.0.0",
    "eslint": "^8.0.0",
    "gh-pages": "^6.0.0",
    "jsdom": "^27.0.0",
    "prettier": "^3.0.0",
    "terser": "^5.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/username/QuizMaker.git"
  },
  "keywords": [
    "quiz",
    "education",
    "ai",
    "web-app",
    "javascript"
  ],
  "author": "Quiz Platform Team",
  "license": "MIT"
}
